        {
          "name": "Create Sale",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generate random GUIDs for customer and branch",
                  "pm.environment.set(\"randomCustomerId\", pm.variables.replaceIn('{{$guid}}'));",
                  "pm.environment.set(\"randomBranchId\", pm.variables.replaceIn('{{$guid}}'));",
                  "pm.environment.set(\"randomProductId\", pm.variables.replaceIn('{{$guid}}'));",
                  "",
                  "// Generate random suffix for names",
                  "pm.environment.set(\"randomSuffix\", Math.floor(Math.random() * 10000));",
                  "",
                  "pm.environment.set(\"randomQuantity\", Math.floor(Math.random() * 20));",
                  "pm.environment.set(\"randomUnitPrice\", Math.floor(Math.random() * 200));"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Parse response JSON\r",
                  "const response = pm.response.json();\r",
                  "\r",
                  "// Safety checks\r",
                  "if (response && response.data) {\r",
                  "    // Set saleId\r",
                  "    if (response.data.id) {\r",
                  "        pm.environment.set(\"saleId\", response.data.id);\r",
                  "    }\r",
                  "\r",
                  "    // Set first saleItemId\r",
                  "    if (Array.isArray(response.data.items) && response.data.items.length > 0) {\r",
                  "        pm.environment.set(\"saleItemId\", response.data.items[0].id);\r",
                  "    }\r",
                  "}"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"customerId\": \"{{randomCustomerId}}\",\n    \"customerName\": \"Customer_{{randomSuffix}}\",\n    \"customerEmail\": \"customer{{randomSuffix}}@example.com\",\n    \"customerPhone\": \"+1-555-0100\",\n    \"branchId\": \"{{randomBranchId}}\",\n    \"branchName\": \"Branch_{{randomSuffix}}\",\n    \"items\": [\n        {\n            \"productId\": \"{{randomProductId}}\",\n            \"productTitle\": \"Product_{{randomSuffix}}\",\n            \"productCategory\": \"Electronics\",\n            \"productDescription\": \"A sample product for testing\",\n            \"quantity\": {{randomQuantity}},\n            \"unitPrice\": {{randomUnitPrice}}\n        }\n    ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/sales",
              "host": [
